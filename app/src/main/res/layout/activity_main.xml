<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2D30"
    android:orientation="vertical"
    android:padding="9dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/cdextrabold"
        android:text="TODAY'S"
        android:textColor="@color/white"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/cdextrabold"
        android:text="NEWS"
        android:textColor="#EBEBEB"
        android:textSize="20dp">

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#1E1F22"
        android:padding="10dp"
        >

        <ImageButton
            android:id="@+id/bsports"
            android:layout_width="168dp"
            android:layout_height="208dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FCFCDA"
            android:fontFamily="@font/cdextrabold"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/sports_imagecard"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/bmedia"
                android:layout_width="168dp"
                android:layout_height="208dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#ECD9AF"
                android:fontFamily="@font/cdextrabold"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/media_imagecard"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/bnational"
                android:layout_width="168dp"
                android:layout_height="208dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#B1A188"
                android:fontFamily="@font/cdextrabold"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/national_imagecard"
                android:textSize="16dp"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toTopOf="@+id/bpolitics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bsports"
                app:layout_constraintVertical_bias="0.5" />

            <ImageButton
                android:id="@+id/bbusiness"
                android:layout_width="168dp"
                android:layout_height="208dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#DEE1D0"
                android:fontFamily="@font/cdextrabold"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/business_imagecard"
                android:text="BUSINESS"
                android:textSize="16dp"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toTopOf="@+id/ball"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bmedia" />

            <ImageButton
                android:id="@+id/bpolitics"
                android:layout_width="168dp"
                android:layout_height="208dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#DBCA9F"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/politics_imagecard"
                android:fontFamily="@font/cdextrabold"
                android:text="POLITICS"
                android:textSize="16dp"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/ball"
                android:layout_width="168dp"
                android:layout_height="208dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#F09C5A"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/all_imagecard"
                android:fontFamily="@font/cdextrabold"
                android:text="ALL"
                android:textSize="16dp"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>